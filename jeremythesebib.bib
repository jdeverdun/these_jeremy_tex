keywords = {Arterial expansion,Brain motion,Brain volume,Magnetic resonance imaging,Pulsation},
number = {5},
pages = {370--380},
pmid = {1407513},
title = {{Pulsatile brain movement and associated hydrodynamics studied by magnetic resonance phase imaging. The Monoro-Kellie doctrine revisited}},
volume = {34},
year = {1992}
}

