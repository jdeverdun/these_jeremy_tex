@article{Deistung2013,
abstract = {Quantitative magnetic susceptibility mapping (QSM) has recently been introduced to provide a novel quantitative and local MRI contrast. However, the anatomical contrast represented by in vivo susceptibility maps has not yet been compared systematically and comprehensively with gradient (recalled) echo (GRE) magnitude, frequency, and R2
